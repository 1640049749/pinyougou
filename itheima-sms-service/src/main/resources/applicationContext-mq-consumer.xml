<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--配置消费者配置项-->
    <bean class="org.apache.rocketmq.client.consumer.DefaultMQPushConsumer" id="consumer" init-method="start"
          destroy-method="shutdown">
        <!--1.消费者组-->
        <property name="consumerGroup" value="consumer_sms_group"></property>
        <!--2.配置服务端的地址-->
        <property name="namesrvAddr" value="192.168.25.129"></property>

        <!--3.配置订阅的主题-->
        <property name="subscription">
            <map>
                <!--topic是SMS_TOPIC,监听所有的TAG-->
                <entry key="SMS_TOPIC" value="*"></entry>
            </map>
        </property>
        <!--4.消费的模式:集群模式-->
        <property name="messageModel" value="CLUSTERING"></property>
        <!--5.设置监听器-->
        <property name="messageListener" ref="messageListener"></property>

    </bean>
    <bean class="com.itheima.sms.listener.SMSMessageListener" id="messageListener"></bean>
</beans>